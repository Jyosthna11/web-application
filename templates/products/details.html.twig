{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
    <style>
        .mb-4 {
            margin-bottom: 0 !important;
        }
        .mt-5 {
            margin-top: 0 !important;
        }
        .middle {
            margin: 32.1vh auto;
        }
    </style>
    <section class="vh-100 openSans" style="background-color: #eeee;">
    <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
    <div class="col-lg-12 col-xl-11">
    <div class="card text-black" style="border-radius: 25px;">
    <div class="card-body p-md-5">
    <div class="row justify-content-center">
    <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">View Details</p>

    <div class="container">
        <div class="row mt-3 mb-4">
            <div class="col-md-4">
                <img src="{{ asset('uploads/' ~ product.imagepath) }}"  style="max-width: 300px; height: auto;" alt="{{ product.name }}" class="img-fluid">
            </div>
            <div class="col-md-8">
                <h1 class="mt-4 mt-md-0">{{ product.name }}</h1>
                <hr>
                <b>Description: </b>{{ product.description }}
                <h5>Price:  {{ product.price }} </h5>
                <form class="mt-4 p-4 bg-light" method="post">

                    <button class="btn btn-info">Contact</button>
                </form>
                <a class="btn btn-warning" href= "{{ path('update_product',{'id':product.id}) }}">Update</a>
                <a class="btn btn-danger" href= "{{ path('delete_product',{'id':product.id}) }}">Delete</a>
            </div>
        </div>
    </div>
{% endblock %}